<Page x:Class="TouristsGo.Pages.TestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:TouristsGo.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TestPage">

    <Grid>
        
        <Image Source="/img/logo.png"/>
        <Border Grid.Row="4" Grid.Column="1"
         Background="#788E78" Height="50"
         CornerRadius="12" Margin="10 0 10 0"/>
        <Button
            Grid.Row="4" Grid.Column="1"
            Height="50" Margin="10 0 10 0"
            BorderThickness="0"
            VerticalAlignment="Center"
            FontSize="27" 
            Content="log in" Background="Transparent"
            Foreground="#F5F5F5" FontWeight="DemiBold" 
  Style="{StaticResource MaterialDesignRaisedAccentButton}"
  ToolTip="Resource name: MaterialDesignRaisedAccentButton"
  materialDesign:RippleAssist.Feedback="#C0D6C0"
  
  IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" Click="Button_Click" />
        
    </Grid>
</Page>
